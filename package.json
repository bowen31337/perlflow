{
  "name": "pearlflow",
  "version": "0.1.0",
  "private": true,
  "description": "PearlFlow - Intelligent Dental Practice AI Assistant",
  "author": "PearlFlow Team",
  "license": "MIT",
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "storybook": "pnpm --filter @pearlflow/chat-ui storybook",
    "build:storybook": "pnpm --filter @pearlflow/chat-ui build-storybook"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
